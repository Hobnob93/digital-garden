<div class="@CardClasses">
    <div class="header pl-5 pr-5 pt-4">
        @if (HeaderFragment is not null)
        {
            @HeaderFragment
        }
    </div>

    @if (!HideHorizontalRules)
    {
        <hr />
    }

    <div class="body p-5 pt-4">
        @if (BodyFragment is not null)
        {
            @BodyFragment
        }
    </div>
</div>
