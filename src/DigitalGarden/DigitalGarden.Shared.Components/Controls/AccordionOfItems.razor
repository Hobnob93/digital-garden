@typeparam TItem

<div class="accordion">
    @foreach (var item in Items)
    {
        <div class="tab @GetItemActiveClass(item)">
            <div class="tab-header" @onclick="_ => OnItemClicked(item)">
                @if (TabHeaderFragment is not null)
                {
                    @TabHeaderFragment(item)
                }
            </div>
            <div class="tab-content">
                @if (TabContentFragment is not null)
                {
                    @TabContentFragment(item)
                }
            </div>
        </div>
    }
</div>
